{
    "name": "self-healing-agent",
    "version": "1.0.0",
    "description": "Playwright self-healing test automation framework",
    "main": "index.js",
    "scripts": {
        "test:dev": "cross-env TEST_ENV=dev playwright test --project=dev",
        "test:staging": "cross-env TEST_ENV=staging playwright test --project=staging",
        "test:prod": "cross-env TEST_ENV=prod playwright test --project=prod",
        "test:prod:all-browsers": "cross-env TEST_ENV=prod playwright test --project=chromium --project=chrome --project=firefox --project=webkit --project=edge --project=mobile-chrome --project=mobile-safari --project=tablet",
        "test:firefox": "cross-env TEST_ENV=prod playwright test --project=firefox",
        "test:webkit": "cross-env TEST_ENV=prod playwright test --project=webkit",
        "test:all-browsers": "playwright test --project=default --project=firefox --project=webkit",
        "test:unit": "vitest run",
        "test:unit:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src tests --ext .ts",
        "lint:fix": "eslint src tests --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.ts\" \"*.json\" \"*.md\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.ts\" \"*.json\" \"*.md\"",
        "typecheck": "tsc --noEmit",
        "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test:unit"
    },
    "keywords": [
        "playwright",
        "self-healing",
        "test-automation",
        "ai"
    ],
    "author": "",
    "license": "ISC",
    "type": "module",
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@playwright/test": "^1.58.0",
        "@types/node": "^25.0.10",
        "dotenv": "^17.2.3",
        "openai": "^6.16.0",
        "playwright": "^1.58.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "@vitest/coverage-v8": "^4.0.18",
        "cross-env": "^7.0.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-playwright": "^2.5.1",
        "prettier": "^3.8.1",
        "typescript-eslint": "^8.54.0",
        "vitest": "^4.0.18"
    }
}